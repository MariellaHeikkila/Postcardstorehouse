<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Retro Primary Button -->
    <style name="Widget.Retro.PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/navy_blue</item>
        <item name="android:textColor">@color/off_white</item>
        <item name="android:fontFamily">@font/spacegrotesksemibold</item>
    </style>

    <!-- Retro Secondary (Outlined) Button -->
    <style name="Widget.Retro.SecondaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/navy_blue</item>
        <item name="android:textColor">@color/navy_blue</item>
        <item name="android:fontFamily">@font/spacegrotesklight</item>
    </style>

    <style name="Widget.Retro.DeleteButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/wine_red</item>
        <item name="android:textColor">@color/wine_red</item>
        <item name="android:fontFamily">@font/spacegrotesksemibold</item>
    </style>

    <style name="Widget.Retro.EditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:background">@drawable/edit_text_background</item>

    </style>
    
    <style name="Widget.Retro.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_background_with_arrow</item>
        <item name="android:popupBackground">@color/navy_blue</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="Widget.Postcardstorehouse.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_text_color</item>
        <item name="itemTextColor">@color/bottom_nav_text_color</item>
        <item name="android:background">@color/wine_red</item>
        <item name="itemIconSize">32dp</item>
        <item name="itemTextAppearanceActive">@style/BottomNavTextActive</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavTextInactive</item>
    </style>

    <style name="BottomNavTextActive" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BottomNavTextInactive" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">12sp</item>
    </style>
</resources>