<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/details_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_detail_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_camera_placeholder"
            android:contentDescription="postcard_image"/>

        <TextView
            android:id="@+id/text_detail_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:text="Country"/>

        <TextView
            android:id="@+id/text_detail_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="topic"/>

        <TextView
            android:id="@+id/text_detail_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notes"/>

        <TextView
            android:id="@+id/text_detail_sent_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sent Date"/>

        <TextView
            android:id="@+id/text_detail_received_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Received Date"/>

        <CheckBox
            android:id="@+id/checkbox_detail_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favorite"/>

        <CheckBox
            android:id="@+id/checkbox_detail_sent_by_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sent by me"/>

    </LinearLayout>

</ScrollView>